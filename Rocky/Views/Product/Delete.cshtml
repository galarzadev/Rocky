@model Rocky.Models.Product


<form method="post" enctype="multipart/form-data">

        <input asp-for="Id" hidden />

    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group ">
            <h2 class="text-info pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control summernote"> </textarea>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationType.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">

                            <button type="submit" class="btn btn-danger w-100">Delete</button>

                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-secondary w-100">
                                <i class="fas fa-sign-out-alt"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 pd-4 pt-4">
                @* Keep this empty *@
                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Image" width="100%" class="w-100" style="border-radius:5px; solid #bbb; border:1px;" />
                }
            </div>
        </div>
    </div>
</form>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
    $(document).ready(function () {
        $('.summernote').summernote(
        {
                height: 250,
                disable: true
        }
        );
    });

    </script>
}